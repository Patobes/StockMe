<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stockme.stockme.ArticulosAdd"
    tools:showIn="@layout/activity_articulos_add"
    android:background="@color/fondo">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/articulos_add_et_nombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Nombre"
        android:layout_alignEnd="@+id/articulos_add_tv_supermercado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo"
        android:id="@+id/articulos_add_tv_tipo"
        android:textSize="20sp"
        android:layout_below="@+id/articulos_add_et_precio"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/articulos_add_sp_tipos"
        android:layout_below="@+id/articulos_add_tv_tipo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/articulos_add_et_precio"
        android:hint="Precio"
        android:layout_below="@+id/articulos_add_et_nombre"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/articulos_add_et_marca"
        android:layout_alignEnd="@+id/articulos_add_et_nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supermercado"
        android:id="@+id/articulos_add_tv_supermercado"
        android:layout_below="@+id/articulos_add_sp_tipos"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/articulos_add_sp_supermercado"
        android:layout_below="@+id/articulos_add_tv_supermercado"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/esquinas_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:textAlignment="center"
        android:minWidth="140dp"
        android:maxWidth="140dp"
        android:id="@+id/articulos_add_btn_aceptar"
        android:textSize="23sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:background="@drawable/esquinas_boton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textAlignment="center"
        android:minWidth="140dp"
        android:maxWidth="140dp"
        android:id="@+id/articulos_add_btn_cancelar"
        android:textSize="23sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/articulos_add_et_marca"
        android:hint="Marca"
        android:layout_above="@+id/articulos_add_et_precio"
        android:layout_alignEnd="@+id/articulos_add_sp_tipos"
        android:layout_toEndOf="@+id/articulos_add_et_nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/articulos_add_et_cantidad"
        android:layout_alignTop="@+id/articulos_add_et_precio"
        android:layout_toEndOf="@+id/articulos_add_et_precio"
        android:hint="Cantidad" />
</RelativeLayout>