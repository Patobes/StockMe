<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/esquinas"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/catalogo_art_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left|bottom|center|right"
        android:maxLines="1"
        android:padding="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:text="@string/Nombre"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/catalogo_art_tipo"
        android:textAlignment="center"
        android:text="@string/Tipo"
        android:gravity="top|left|bottom"
        android:layout_below="@+id/catalogo_art_nombre"
        android:layout_centerHorizontal="true"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Marca"
        android:id="@+id/catalogo_art_marca"
        android:gravity="top|bottom|right"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/catalogo_art_tipo"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/catalogo_borrar"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="#00ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/catalogo_art_nombre"
        android:tint="#4c4c4c"

        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</RelativeLayout>