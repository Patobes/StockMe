<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#bbd3f3"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/listitem_lista_nombre"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listitem_lista_btn_delete"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supermercado"
        android:id="@+id/listitem_lista_supermercado"
        android:textSize="16sp"
        android:layout_below="@+id/listitem_lista_nombre"
        android:layout_toEndOf="@+id/listitem_lista_btn_delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:id="@+id/listitem_lista_fecha"
        android:layout_alignBottom="@+id/listitem_lista_supermercado"
        android:layout_toEndOf="@+id/listitem_lista_supermercado"
        android:layout_marginLeft="10dp"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NProductos"
        android:id="@+id/listitem_lista_nproductos"
        android:layout_alignBottom="@+id/listitem_lista_fecha"
        android:layout_toEndOf="@+id/listitem_lista_fecha"
        android:layout_marginLeft="10dp"
        android:textSize="16sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listitem_lista_btn_delete"
        android:src="@drawable/ic_delete_forever_black_18dp"
        android:background="#00ffffff"
        android:layout_above="@+id/listitem_lista_supermercado"
        android:layout_alignParentStart="true" />

</RelativeLayout>