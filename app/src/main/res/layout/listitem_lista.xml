<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/esquinas"
    android:clickable="false"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:id="@+id/listitem_lista_nombre"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listitem_lista_btn_delete" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supermercado"
        android:id="@+id/listitem_lista_supermercado"
        android:textSize="16sp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_below="@+id/listitem_lista_nombre"
        android:layout_alignStart="@+id/listitem_lista_nombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:id="@+id/listitem_lista_fecha"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignTop="@+id/listitem_lista_supermercado"
        android:layout_toEndOf="@+id/listitem_lista_supermercado" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/listitem_lista_nproductos"
        android:textSize="30dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/listitem_lista_fecha"
        android:layout_toStartOf="@+id/textView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listitem_lista_btn_delete"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="#00ffffff"
        android:tint="#707e86"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:minWidth="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arts."
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/listitem_lista_fecha"
        android:layout_marginBottom="8dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>