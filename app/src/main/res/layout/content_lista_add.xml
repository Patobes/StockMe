<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stockme.stockme.ListaAdd"
    tools:showIn="@layout/activity_lista_add">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista_add_tv_nombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="@string/lista_add_nombre"
        android:textSize="30sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista_add_et_nombre"
        android:layout_alignBaseline="@+id/lista_add_tv_nombre"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/lista_add_tv_nombre"
        android:textSize="25sp"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lista_add_tv_elementos"
        android:layout_below="@+id/lista_add_tv_nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp"
        android:textSize="30sp"
        android:text="@string/lista_add_elementos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AÃ±adir"
        android:id="@+id/lista_add_btn_anyadir"
        android:layout_alignBaseline="@+id/lista_add_tv_elementos"
        android:layout_toEndOf="@+id/lista_add_tv_elementos"
        android:textSize="23sp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:id="@+id/lista_add_btn_aceptar"
        android:textSize="23sp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/lista_add_btn_cancelar"
        android:textSize="23sp"
        android:layout_marginLeft="10dp"
        android:layout_alignBottom="@+id/lista_add_btn_aceptar"
        android:layout_toEndOf="@+id/lista_add_btn_aceptar" />
</RelativeLayout>
