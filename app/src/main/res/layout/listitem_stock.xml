<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/esquinas" >

    <ImageButton
        android:id="@+id/listitem_stock_bt_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:minWidth="30dp"
        android:src="@drawable/ic_delete_black_24dp"
        android:background="#00ffffff"
        android:tint="#707e86"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <TextView
        android:id="@+id/listitem_stock_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listitem_stock_bt_delete"
        android:layout_marginLeft="10dp"
        android:text="Nombre"
        android:textSize="19sp"
        android:textStyle="bold"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/listitem_stock_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listitem_stock_nombre"
        android:layout_alignTop="@+id/listitem_stock_nombre"
        android:layout_alignBottom="@+id/listitem_stock_nombre"
        android:layout_alignBaseline="@+id/listitem_stock_nombre"
        android:layout_marginLeft="3dp"
        android:text="Marca"
        android:textSize="17sp"
        android:paddingLeft="10dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/listitem_stock_minimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listitem_stock_nombre"
        android:layout_alignStart="@+id/listitem_stock_nombre"
        android:text="Minimo"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/listitem_stock_tv_minimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/listitem_stock_minimo"
        android:layout_alignTop="@+id/listitem_stock_minimo"
        android:layout_alignBottom="@+id/listitem_stock_minimo"
        android:layout_alignBaseline="@+id/listitem_stock_minimo"
        android:hint="Precio"
        android:layout_marginLeft="3dp"
        android:paddingLeft="5dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="0"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/listitem_stock_mas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/listitem_stock_minimo"
        android:minWidth="30dp"
        android:maxWidth="40dp"
        android:src="@drawable/ic_add_black_18dp"
        android:background="#00ffffff"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

    <TextView
        android:id="@+id/listitem_stock_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/listitem_stock_mas"
        android:layout_alignTop="@+id/listitem_stock_mas"
        android:layout_alignBottom="@+id/listitem_stock_mas"
        android:minWidth="45dp"
        android:maxWidth="45dp"
        android:text="0"
        android:textSize="35dp"
        android:textAlignment="center"
        android:inputType="number"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

    <ImageButton
        android:id="@+id/listitem_stock_menos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/listitem_stock_cantidad"
        android:layout_alignTop="@+id/listitem_stock_mas"
        android:layout_alignBottom="@+id/listitem_stock_mas"
        android:minWidth="30dp"
        android:maxWidth="40dp"
        android:src="@drawable/ic_remove_black_18dp"
        android:background="#00ffffff"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />

</RelativeLayout>