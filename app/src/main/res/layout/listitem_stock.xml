<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre Articulo"
        android:id="@+id/listitem_stock_nombre"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="x"
        android:id="@+id/listitem_stock_x"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/listitem_stock_cantidad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cantidad"
        android:id="@+id/listitem_stock_cantidad"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:layout_alignParentTop="true"
        android:numeric="integer"
        android:inputType="number"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Marca"
        android:id="@+id/listitem_stock_marca"
        android:layout_below="@+id/listitem_stock_nombre"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp" />

</RelativeLayout>